@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "AdminAbout";
    Layout = "~/Views/Shared/AdminPanelLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    @foreach (var item in Model)
                    {

                            <div class="col-md-12">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Hakkımızda Sayfası</h3>

                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    @using (Html.BeginForm("AdminAbout", "About", FormMethod.Post))
                                    {
                                        <input type="hidden" value="@item.AboutId" name="AboutId"/>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label for="inputName">Görsel Yolu</label>
                                                <input type="text" id="inputName" class="form-control" value="@item.ImageUrl1" name="ImageUrl1">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputName">Görsel Yolu 2</label>
                                                <input type="text" id="inputName" class="form-control" value="@item.ImageUrl2" name="ImageUrl2">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputDescription">Hakkımızda Açıklam</label>
                                                <textarea id="inputDescription" class="form-control" rows="4" name="AboutDescription1">@item.AboutDescription1</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label for="inputDescription">Hakkımızda Açıklam 2</label>
                                                <textarea id="inputDescription" class="form-control" rows="4" name="AboutDescription2">@item.AboutDescription2</textarea>
                                            </div>
                                        </div>
                                        <button class="btn btn-outline-primary">Güncelle</button>
                                    }
                                        <!-- /.card-body -->
                                    </div>
                                <!-- /.card -->
                            </div>
                            
                        }
                    </div>
                
            </section>
            <!-- /.content -->

        <!-- /.content-wrapper -->


        
        <!-- /.control-sidebar -->
    </div>
</body>
</html>


