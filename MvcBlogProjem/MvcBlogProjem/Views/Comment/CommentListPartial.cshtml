@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="pt-5">
    <h3 class="mb-5">Yorumlar</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
        <li class="comment">
            <div class="vcard">
                <img src="#" alt="">
            </div>
            <div class="comment-body">
                <h3>@item.Username</h3>
                <div class="meta">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</div>
                <p>@item.CommentContent</p>
            </div>
        </li>
        }
    </ul>
    
</div>
