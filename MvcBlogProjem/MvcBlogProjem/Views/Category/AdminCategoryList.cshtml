@using EntityLayer.Concrete
@model List<Category>


@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/AdminPanelLayout.cshtml";
}
@{ string color;}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Projects</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 1%">
                                        Kategoti Id
                                    </th>
                                    <th style="width: 20%">
                                        Kategori Adı
                                    </th>
                                    <th style="width: 30%">
                                        Son Blog
                                    </th>
                                    <th>
                                        Kategori Bar 
                                    </th>
                                    <th style="width: 8%" class="text-center">
                                        Durum
                                    </th>
                                    <th style="width: 20%">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    if(item.CategoryStatus == true)
                                    {
                                        color = "badge badge-success";
                                    }
                                    else if (item.CategoryStatus == false)
                                    {
                                        color = "badge badge-danger";
                                    }
                                    else
                                    {
                                        color = "badge badge-dark";
                                    }
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.CategoryName</td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="~/AdminLTE-3.0.4/dist/img/avatar.png">
                                            </li>
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="~/AdminLTE-3.0.4//dist/img/avatar2.png">
                                            </li>
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="~/AdminLTE-3.0.4//dist/img/avatar3.png">
                                            </li>
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="~/AdminLTE-3.0.4//dist/img/avatar04.png">
                                            </li>
                                        </ul>
                                    </td>
                                    <td class="project_progress">
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">
                                            </div>
                                        </div>
                                        <small>
                                            57% Complete
                                        </small>
                                    </td>
                                    <td class="project-state">
                                        <span class="@color">@item.CategoryStatus</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="#">
                                            <i class="fas fa-folder">
                                            </i>
                                            Yazılar
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/Category/UpdateCategory/@item.CategoryId/">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/Category/CategoryStatusToFalse/@item.CategoryId/">
                                            <i class="fas fa-trash">
                                            </i>
                                            Pasif Yap
                                        </a>
                                        <a class="btn btn-warning btn-sm" href="/Category/CategoryStatusToTrue/@item.CategoryId/">
                                            <i class="fas fa-trash">
                                            </i>
                                            Aktif Yap
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </section>
            <!-- /.content -->
        <button class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1" >Kategori Ekle</button>
        <div class="modal" id="Modal1">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Yeni kategori Ekleme Paneli</h2>
                </div>
                @using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
                {
                    <div class="modal-body">
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" name="CategoryName" />
                        <label>Açıklama</label>
                        
                        <textarea class="form-control" rows="5 " cols="5" name="CategoryDescription"></textarea>
                        
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-info">Kategori Ekle</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>


