@using EntityLayer.Concrete
@model List<Author> 

<div class="tab-pane" id="settings">
    @using (Html.BeginForm("UpdateAuthor", "AdminAuthor",FormMethod.Post))
    {
    foreach (var item in Model)
    {
    <form class="form-horizontal">
        <input type="hidden" value="@item.AuthorId" name="AuthorId"/>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName" name="AuthorName" value="@item.AuthorName">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Yazar Görsel</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName" name="AuthorImage" value="@item.AuthorImage">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Yazar Meslek</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName" name="AuthorTitle" value="@item.AuthorTitle">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Yazar Mail</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputName" name="AuthorMail" value="@item.AuthorMail">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Telefon</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName" name="AuthorPhone" value="@item.AuthorPhone">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName" name="AuthorPassword" value="@item.AuthorPassword">
            </div>
        </div>
        
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Kısa Hakkında</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName" name="AuthorShortAbout" value="@item.AuthorShortAbout">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Yazar Hakkında</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="inputExperience" name="AuthorDetail" >@item.AuthorDetail</textarea>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Şifremi Değiştirme istiyorum
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Güncelle</button>
            </div>
        </div>
    </form>
    }
    }
</div>
